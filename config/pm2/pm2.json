{
  "apps": [{
    "name": "chatbot-auth",
    "script": "app.js",
    "instances": 1,
    "exec_mode": "fork",
    "watch": false,
    "max_memory_restart": "512M",
    "env": {
      "NODE_ENV": "production",
      "PORT": 7000
    },
    "log_date_format": "YYYY-MM-DD HH:mm:ss",
    "error_file": "/var/log/chatbot-auth/error.log",
    "out_file": "/var/log/chatbot-auth/out.log",
    "merge_logs": true
  }]
}